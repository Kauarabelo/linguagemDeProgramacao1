<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.Image?>

<VBox fx:controller="org.example.atividade_15_04_2025.controller.CriancaController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="TOP_CENTER"
      styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Imagem do item -->
    <ImageView fx:id="imagemItem" fitWidth="200" fitHeight="200" preserveRatio="true">
        <image>
            <Image url="@../imagens/Criancas.JPG"/>
        </image>
    </ImageView>

    <!-- Campos de entrada para os dados dinâmicos -->
    <Label text="Nome da Criança:"/>
    <TextField fx:id="campoNome" promptText="Ex: Artur"/>

    <Label text="Idade:"/>
    <TextField fx:id="campoIdade" promptText="Ex: 12"/>

    <Label text="Altura (m):"/>
    <TextField fx:id="campoAltura" promptText="Ex: 1.25"/>

    <!-- Botões -->
    <Button onAction="#btnBrincarClick" text="Brincar"/>
    <Button onAction="#btnComerClick" text="Comer"/>
    <Button onAction="#btnEstudarClick" text="Estudar"/>
    <Button onAction="#btnVoltarClick" text="Voltar"/>

</VBox>
