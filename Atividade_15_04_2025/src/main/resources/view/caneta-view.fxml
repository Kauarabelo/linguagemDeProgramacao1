<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.Image?>

<VBox fx:controller="org.example.atividade_15_04_2025.controller.CanetaController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="TOP_CENTER"
      styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Imagem do item -->
    <ImageView fx:id="imagemItem" fitWidth="200" fitHeight="200" preserveRatio="true">
        <image>
            <Image url="@../imagens/Caneta.jpeg" />
        </image>
    </ImageView>

    <!-- Entradas de dados -->
    <Label text="Cor da Caneta:"/>
    <TextField fx:id="campoCor" promptText="Ex: Azul"/>

    <Label text="Tipo da Tinta:"/>
    <TextField fx:id="campoTipoTinta" promptText="Ex: Gel, Esferográfica"/>

    <Label text="Espessura da Ponta:"/>
    <TextField fx:id="campoEspessura" promptText="Ex: 0.7"/>

    <!-- Botões de ação -->
    <Button onAction="#btnEscreverClick" text="Escrever"/>
    <Button onAction="#btnRecarregarClick" text="Recarregar"/>
    <Button onAction="#btnTamparClick" text="Tampar"/>
    <Button onAction="#btnVoltarClick" text="Voltar"/>

</VBox>
