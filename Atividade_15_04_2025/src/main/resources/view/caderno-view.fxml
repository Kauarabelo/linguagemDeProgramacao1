<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.Image?>

<VBox fx:controller="org.example.atividade_15_04_2025.controller.CadernoController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="TOP_CENTER"
      styleClass="root">

        <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Imagem do item -->
        <ImageView fx:id="imagemItem" fitWidth="200" fitHeight="200" preserveRatio="true">
                <image>
                        <Image url="@../imagens/Cadernos.jpg"/>
                </image>
        </ImageView>

        <!-- Campos de entrada -->
        <Label text="Tipo do Caderno:"/>
        <TextField fx:id="campoTipo" promptText="Ex: Universitário"/>

        <Label text="Quantidade de Folhas:"/>
        <TextField fx:id="campoFolhas" promptText="Ex: 96"/>

        <Label text="Fabricante:"/>
        <TextField fx:id="campoFabricante" promptText="Ex: Faber Castell"/>

        <!-- Botões -->
        <Button onAction="#btnTipoClick" text="Mostrar Tipo"/>
        <Button onAction="#btnFolhaClick" text="Mostrar Folhas"/>
        <Button onAction="#btnFabricanteClick" text="Mostrar Fabricante"/>
        <Button onAction="#btnVoltarClick" text="Voltar"/>

</VBox>
